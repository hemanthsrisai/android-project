<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/www"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Addattendence" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignParentTop="true"
        android:text="adminid"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#f5fffa" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText1"
        android:layout_alignLeft="@+id/editText1"
        android:layout_marginBottom="30dp"
        android:background="#DAA520"
        android:text="to date calender"
        android:textColor="#f5fffa" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_marginBottom="23dp"
        android:background="#DAA520"
        android:text="Calender"
        android:textColor="#f5fffa" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView1"
        android:layout_alignTop="@+id/textView1"
        android:layout_marginLeft="71dp"
        android:background="#e0ffff"
        android:gravity="center"
        android:hint="id no"
        android:textColorHint="#ff4500"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp"
        android:background="#DAA520"
        android:text="Submit"
        android:textColor="#f5fffa" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_marginBottom="14dp"
        android:background="#e0ffff"
        android:ems="10"
        android:gravity="center"
        android:hint="absentdays"
        android:textColor="#000000"
        android:textColorHint="#ff4500" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:background="#e0ffff"
        android:gravity="center"
        android:hint="no.of.workingdays"
        android:textColor="#000000"
        android:textColorHint="#ff4500" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText3"
        android:layout_alignLeft="@+id/editText1"
        android:layout_marginBottom="14dp"
        android:background="#e0ffff"
        android:ems="10"
        android:gravity="center"
        android:hint="presentdays"
        android:textColor="#000000"
        android:textColorHint="#ff4500" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/textView2"
        android:layout_marginBottom="16dp"
        android:ems="10" 
        android:background="#e0ffff"
        android:gravity="center"
        android:hint="employee id no"
        android:textColor="#000000"
        android:textColorHint="#ff4500"/>

</RelativeLayout>
